@model List<MeyawoPortfolio.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Gelen Mesajlar Sayfası</h2>

<table class="table table-bordered">
    
    <tr>
        <th> Mesaj Id</th>
        <th> Gönderen</th>
        <th> Tarih</th>  
        <th> Mesajı Aç</th>
        <th> Mesajı Sil</th>
    </tr>
    @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ContactId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.SendDate</td>
                    <td><a href="#" class="btn btn-info" data-toggle="modal" data-ng-message="@item.Message" data-target="#Modal1">Mesajı Ac</a></td>
                    @*<td> <a href="#" class="btn btn-warning"> Mesajı'da Aç</a></td>*@
                    <td> <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-secondary"> Mesajı'da Sil</a></td>
                </tr>
            }

</table>



<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">
                    Mesajın  Detayı
                </h2>
            </div>
            <form method="post" action="">
                <div class="modal-body">
                    @foreach (var item in Model)
                    {
                        <label>@item.Message</label>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

